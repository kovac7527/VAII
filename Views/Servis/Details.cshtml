@model DataAccesLib.Models.ServisDevice
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-around">
        <h2 class="text-align-center col-12 mt-3"> Servis pre @Model.Name (@Model.Model)</h2>
        <div class="col-md-4 d-flex justify-content-center ">
            <img class="DeviceDetailIMG mt-5 " src="/UploadedImgs/ServisDevices/@Model.ImagePath" alt="Brand Logo">
        </div>

        <div class="col-12 text-center align-middle mt-2 ">
            <hr />
            <div class="row justify-content-center mt-4">
                <a onclick="description('1')" href="#" class="col-md-8">
                    <div class="servisAction"> <span>Some servis action</span></div>
                </a>
            </div>
            <div id="1" style="display: none" class="row">
                SOME TEXT HERE
            </div>

            <div class="row justify-content-center mt-4">
                <a onclick="description('2')" href="#" class="col-md-8">
                    <div class="servisAction"> <span>Some servis action</span></div>
                </a>
            </div>
            <div id="2" style="display: none" class="row">
                SOME TEXT HERE
            </div>

            <div class="row justify-content-center mt-4">
                <a onclick="description('3')" href="#" class="col-md-8">
                    <div class="servisAction"> <span>Some servis action</span></div>
                </a>
            </div>
            <div id="3" style="display: none" class="row">
                SOME TEXT HERE
            </div>


        </div>
        @foreach (var action in Model.ServisActions)
        {
            <div class="row justify-content-center mt-4">
                <a onclick="description('@action.Id')" href="#" class="col-md-8">
                    <div class="servisAction"> <span>@action.Name</span></div>
                </a>
            </div>
            <div id="@action.Id" style="display: none" class="row">
                @action.Description
            </div>

        }


    </div>

    <div class="row justify-content-center ">
        <div class="col-auto ">
            <div>
                <a class="btn btn-warning mt-5" asp-action="Index" asp-route-id="@Model.SeriesId">Späť na sériu</a>
            </div>
        </div>
    </div>
</div>


<script>
    function description(id) {
        var element = document.getElementById(id);
        if (element.style.display === "none") {
            document.getElementById(id).style.display = 'inline-block';
        } else {
            document.getElementById(id).style.display = 'none';
        }
        
    }
</script>



