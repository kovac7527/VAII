@using Microsoft.AspNetCore.Identity
@using Newtonsoft.Json

@model DataAccesLib.Models.AdminUser
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutAdminLogin.cshtml";
}
@Html.ValidationMessageFor(user => user.UserName)
@Html.ValidationMessageFor(user => user.Password)

<div class="container h-100 d-flex justify-content-center ">
    <div class=" my-auto justify-content-center">

        @using (Html.BeginForm("Authorise", "Admin", FormMethod.Post))
        {
            <h3 class="text-center mb-3"> Prihlásenie </h3>
            <div class="form-group mx-auto">
                @Html.TextBoxFor(model => model.UserName, new { @class = "mx-auto form-control admin_login_input ", @Required = "required", placeholder = Html.DisplayNameFor(model => model.UserName) })
                @Html.ValidationMessageFor(user => user.UserName)
            </div>
            <div class="form-group mx-auto">
                @Html.TextBoxFor(model => model.Password, new { @class = "mx-auto form-control admin_login_input ", placeholder = Html.DisplayNameFor(model => model.Password), type = "Password" })
                @Html.ValidationMessageFor(user => user.Password)
                @{
                    if (TempData["msg"] != null)
                    {
                        <h1>@TempData["msg"]</h1>
                    }
                }
            </div>
            <div class="row justify-content-center">
                <div class="form-group col-9">
                    <button type="submit" class="btn btn-primary btn-block admin_login_btn mx-auto" name="admin-sing-in">Prihlásiť</button>
                </div>
            </div>
            <p class="text-center"><a href="mailto:kovacj.jan@gmail.com?subject=AdminSupport">Kontaktuj admina</a></p>
        }


      

        
    </div>

</div>


