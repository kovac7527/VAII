@model DataAccesLib.Models.SmartBlogItem

@{
    ViewData["Title"] = "NewsDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <div class="row align-items-center ">
        <div class="col-md-4 mt-5">
            <img id="company-logo-img" class="rounded-sm mx-auto d-block" src="@Model.ImagePath" alt="SmartMedic Logo">
        </div>
        <div class="col-md">
            <div class="row">
                <div class="col-md mt-4">
                    <p><h3 class="text-align-center">@Model.Heading</h3>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md  mt-2">
                    <p>
                       @Model.text
                    </p>
                </div>
            </div>
        </div>
    </div>

</div>