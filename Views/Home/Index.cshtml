<!--js counter animated-->
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="counter-box">
                <i class="fa fa-thumbs-up"></i>
                <span class="counter">2147</span>
                <p>Spokojných zákazníkov</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="counter-box">
                <i class="fa fa-group"></i>
                <span class="counter">3275</span>
                <p>Registrovaných zákazníkov</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="counter-box">
                <i class="fa fa-wrench"></i>
                <span class="counter">364</span>
                <p>Servisovaných zariadení</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="counter-box">
                <i class="fa fa-recycle"></i>
                <span class="counter">5966</span><span>kg</span>
                <p>Zrecyklovaného elektroodpadu</p>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function() {

        $('.counter').each(function () {
            $(this).prop('Counter',0).animate({
                Counter: $(this).text()
            }, {
                duration: 4000,
                easing: 'swing',
                step: function (now) {
                    $(this).text(Math.ceil(now));
                }
            });
        });

    });
</script>
<!--end of js counter animated-->