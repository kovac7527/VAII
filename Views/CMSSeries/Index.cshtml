@model IEnumerable<DataAccesLib.Models.Series>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminCMSLayout.cshtml";
}




<div class="container">
    <hr class="mt-2" />
    <div class="row  justify-content-center">
        <div class=" col-12"><h2 class="text-align-center">@ViewBag.BrandName </h2></div>
        <div class="col-auto align-items-center" > <img class="BrandLogo-CMS" src="/UploadedImgs/BrandLogo/@ViewBag.BrandLogo" alt="Brand Logo"></div>
    </div>
    <hr />
    <div class=" row justify-content-between">
        <div class="col-auto"><a asp-action="Create" class="btn btn-success mt-2" asp-route-id="@ViewBag.BrandId">Vytvoriť sériu</a></div>
        <div class="col-auto"><a asp-action="Index" asp-controller="CMSBrands" class="btn btn-outline-warning mt-2">Späť na značky</a></div>
    </div>
    

    <div class="row justify-content-center">

        <table class="table mt-3">
            <thead>
                <tr>

                    <th class="">@Html.DisplayNameFor(model => model.Name)</th>
                    <th class="">@Html.DisplayNameFor(model => model.ServisDevices.Count)</th>
                    <th class="">Akcia</th>
                </tr>
            </thead>
            <tbody>
            </tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.ServisDevices.Count)
                        <a asp-controller="CMSServisDevices" asp-action="Index" class="btn btn-outline-primary m-2" asp-route-id="@item.Id">Zobraziť zariadenia</a>
                    </td>
                    <td class="align-middle">
                        <a asp-action="Edit" class="btn btn-warning m-2" asp-route-id="@item.Id">Upraviť</a> |
                        <a asp-action="Details" class="btn btn-outline-primary m-2" asp-route-id="@item.Id">Zobraziť</a> |
                        <a asp-action="Delete" class="btn btn-danger  m-2" asp-route-id="@item.Id">Odstrániť</a>
                    </td>
                </tr>
            }




        </table>
    </div>
</div>




