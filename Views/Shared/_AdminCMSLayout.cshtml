@using Microsoft.AspNetCore.Http
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*@Styles.Render("~/Content/css")*@



    <link href="~/Content/styles/bootstrap-4.5.3-dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/Content/font_awesome/font-awesome-4.7.0/css/font-awesome.css">
    <link rel="stylesheet" href="~/Content/styles/styles.css">
    <link rel="stylesheet" href="~/Content/styles/Admin/Cms.css">

    <script src="~/Content/js/jQuery.js"></script>
    <script src="~/Content/styles/bootstrap-4.5.3-dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Styles", false)

    

</head>
<body>

    <!--    navigation bar    -->
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <div class="navbar-brand">
            <h3>@Html.ActionLink("Smart Medic", "Index", "Admin")</h3>
        </div>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <div class="nav-link"> @Html.ActionLink("Servis", "Index", "CMSBrands")</div>
                </li>
                <li class="nav-item active">
                    <div class="nav-link"> @Html.ActionLink("Smart news", "SmartNews", "Admin")</div>
                </li>
                <li class="nav-item active">
                    <div class="nav-link"> @Html.ActionLink("O nás", "About", "Admin")</div>
                </li>
                <li class="nav-item active">
                    <div class="nav-link"> @Html.ActionLink("Kontakt", "Kontakt", "Admin")</div>
                </li>

            </ul>
            <ul class="nav navbar-nav navbar-right">

                
                <li> <a asp-action="Logout" asp-controller="Admin" class="btn btn-danger">LOGOUT</a>  </li>

            </ul>
        </div>
    </nav>
    <!--end of navigation bar -->
    <!--Main page -->
    @RenderBody()
    <!--end of main page -->



    @RenderSection("scripts", required: false)
</body>
</html>
