<script type="text/javascript">
    // Hide Header on on scroll down
    var didScroll;
    

    $(window).resize(function () {
        checkScreenForFooter();
    });

    $(document).ready(function() {
        checkScreenForFooter();
    });

    function checkScreenForFooter() {
        $('main').css("margin-bottom",$('footer').outerHeight() + 20);
        console.log("Margin bottom is noow:" + $('main').css("margin-bottom"));
        $('.footer-down').css("bottom",  -($('footer').outerHeight()));
        if ($(document).height() <= $(window).height()){
            $('footer').removeClass('footer-down').addClass('footer-up');
            $('.footer-up').css("bottom",  0);
        }
        return; }

    $(window).scroll(function(event){
        didScroll = true;
    });

    setInterval(function() {
        if (didScroll) {
            hasScrolled();
            didScroll = false;
        }
    }, 250);



    function hasScrolled() {
        var st = $(this).scrollTop();
        console.log("scroltop" + st);
    
     
        if (($(window).scrollTop() + $(window).height()) >= $(document).height() - $('footer').outerHeight()/2 ){
            // Scroll Down
            $('footer').removeClass('footer-down').addClass('footer-up');
            $('.footer-up').css("bottom",  0);
        } else {
            // Scroll Up
            if (($(window).scrollTop() + $(window).height()) < $(document).height() - $('footer').outerHeight()/2) {
                $('footer').removeClass('footer-up').addClass('footer-down');
                $('.footer-down').css("bottom", -($('footer').outerHeight()));
            }
        }
    
       
    }
</script>
