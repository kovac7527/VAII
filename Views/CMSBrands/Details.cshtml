@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminCMSLayout.cshtml";
}

<h1>Details</h1>
<div class="container">
    <div>
        <h4>DeviceBrand</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
