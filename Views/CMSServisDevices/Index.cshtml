@model IEnumerable<DataAccesLib.Models.ServisDevice>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminCMSLayout.cshtml";
}



<div class="container">
    @ViewBag.SeriesName
    <a asp-action="Create" class="btn btn-success mt-2" asp-route-id="@ViewBag.SeriesID">Pridať zariadenie</a>
    <div class="row justify-content-center">
        <table class="table mt-3">
            <thead>
                <tr>

                    <th class="">@Html.DisplayNameFor(model => model.Name)</th>
                    <th class="">@Html.DisplayNameFor(model => model.Model)</th>
                    <th class="">Akcia</th>
                </tr>
            </thead>
            <tbody>
            </tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Model)
                        <a asp-controller="CMSServisDevices" asp-action="Index" class="btn btn-outline-primary m-2" asp-route-id="@item.Id">Servisné úkony</a>
                    </td>
                    <td class="align-middle">
                        <a asp-action="Edit" class="btn btn-warning m-2" asp-route-id="@item.Id">Upraviť</a> |
                        <a asp-action="Details" class="btn btn-outline-primary m-2" asp-route-id="@item.Id">Zobraziť</a> |
                        <a asp-action="Delete" class="btn btn-danger  m-2" asp-route-id="@item.Id">Odstrániť</a>
                    </td>
                </tr>
            }




        </table>
    </div>
</div>

